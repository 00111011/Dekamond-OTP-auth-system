const express = require('express');
const authRoutes = express.Router();

const validatePhone = require('../middlewares/validate-phone');
const { requestOtpController  , verifyOtpController} = require('../controllers/auth-controller');

// POST /auth/request-otp
authRoutes.post('/request-otp', validatePhone, requestOtpController);

// POST /auth/verify-otp
authRoutes.post('/verify-otp' ,verifyOtpController);

module.exports = authRoutes;


